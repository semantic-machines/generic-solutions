<http://semantic-machines.com/veda/gen-aspect>
  rdf:type owl:Ontology ;
  rdfs:label "Онтология Общих решений. Аспект."@ru ;
  rdfs:label "GEN ontology. Aspect."@en ;
  #owl:versionInfo "0.2" ;
  v-s:loadPriority 10 ;
.

# MAIN ASPECT ----------------------------------------------------------

gen:Main
  rdf:type v-s:Aspect ;
  rdfs:label "Главная"@ru ;
  rdfs:label "Main"@en ;
  v-s:hasBusinessAspect gen:DocumentationManagementAspect ;
#  v-s:hasBusinessAspect gen:PurchasesSalesAspect ;
#  v-s:hasBusinessAspect gen:HumanResourcesAspect ;
  v-ui:hasTemplate gen:MainTemplate ;
.

gen:MainTemplate
  rdf:type v-ui:ClassTemplate ;
  rdfs:label "Шаблон главной"@ru ;
  rdfs:label "Main template"@en ;
  v-ui:template """
<div about="@" rel="v-s:hasBusinessAspect" data-limit="1" data-template="gen:AspectTemplate"></div>
  """ ;
.

gen:AspectTemplate
  rdf:type v-ui:ClassTemplate ;
  rdfs:label "Шаблон аспекта"@ru ;
  rdfs:label "Aspect template "@en ;
  v-ui:template """
<div>
  <style>
    #aspect-link-group {
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      border-bottom: 1px solid #555;
    }
    #aspect-link-group > .aspect-link {
      color: #555;
      flex-grow: 1;
      border-radius: 6px 6px 0 0;
    }
    #aspect-link-group > .aspect-link:hover {
      color: #555;
      text-decoration: underline;
    }
    #aspect-link-group > .aspect-link.active {
      color: #fff;
      background-color: #555;
      border-color: #555;
      pointer-events: none;
      text-decoration: none;
      text-shadow: 0px 1px 1px black;
    }
    #aspect-link-group > .aspect-link.active:hover {
      color: #fff;
      text-decoration: underline;
      background-color: #555;
      border-color: #555;
    }
  </style>
  <div about="gen:Welcome" class="container">
    <div class="btn-group" id="aspect-link-group" about="@" rel="v-s:hasBusinessAspect">
      <a href="#/@//gen:AspectTemplate" class="btn btn-sm btn-link aspect-link" about="@" property="v-s:shortLabel"></a>
    </div>
  </div>
  <div about="@" data-template="v-s:AspectTemplate"></div>
</div>
<script>
  $(".aspect-link[about='" + veda.Util.escape4$(individual.id) + "']", template).removeClass("btn-link").addClass("btn-primary active");
</script>
  """ ;
.

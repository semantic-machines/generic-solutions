gen:SearchAppFunction
  rdf:type v-s:Function ;
  rdfs:label "Функция поиска функций в приложениях" ;
  v-ui:hasModel gen:SearchAppFunctionModel ;
  v-ui:hasTemplate gen:SearchAppFunctionTemplate ;
